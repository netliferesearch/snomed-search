{
  "name": "snomed-search",
  "version": "0.6.3",
  "private": true,
  "license": "MIT",
  "dependencies": {
    "awesome-debounce-promise": "^2.1.0",
    "bootstrap": "^4.6.0",
    "classnames": "^2.3.1",
    "i18next": "^20.2.2",
    "i18next-browser-languagedetector": "^6.1.1",
    "lodash.debounce": "^4.0.8",
    "query-string": "^7.0.0",
    "react": "^17.0.2",
    "react-async-hook": "^3.6.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.8.15",
    "react-router-dom": "^5.2.0",
    "use-constant": "^1.1.0",
    "use-query-params": "^1.2.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll=false",
    "eject": "react-scripts eject",
    "commit": "cz",
    "prebuild": "npm-run-all clean generate:tsdefinitions validate",
    "generate:tsdefinitions": "tsm --nameFormat none --exportType default src",
    "clean": "rimraf build",
    "test:watch": "react-scripts test --watchAll=true",
    "prepare": "husky install",
    "validate": "npm-run-all prettier eslint type-check test",
    "eslint": "cross-env NODE_ENV=production eslint src/**/*.{js,jsx,ts,tsx}",
    "eslint:fix": "npm run eslint -- --fix",
    "prettier": "prettier --check src/**/*.{js,jsx,ts,tsx,css,scss,md,json}",
    "prettier:fix": "prettier --write src/**/*.{js,jsx,ts,tsx,css,scss,md,json}",
    "pretype-check": "tsc -v",
    "type-check": "tsc --noEmit"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@testing-library/dom": "^7.31.0",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.9",
    "@types/jest": "26.0.23",
    "@types/lodash": "^4.14.169",
    "@types/node": "15.0.3",
    "@types/react": "17.0.5",
    "@types/react-dom": "17.0.5",
    "@types/react-router-dom": "^5.1.7",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jest-dom": "^3.9.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-testing-library": "^4.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "msw": "^0.28.2",
    "node-sass": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "react-scripts": "4.0.3",
    "typed-scss-modules": "^4.1.1",
    "typescript": "4.2.4"
  },
  "engines": {
    "node": ">=14.0.0",
    "yarn": ">=1.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,css,scss,md,json}": "prettier --write"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
